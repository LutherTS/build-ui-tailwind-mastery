generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Server {
  identifier  Int     @id @default(autoincrement())

  id          String // dependent on characters.ts

  categories Category[]
}

model Category {
  identifier   Int     @id @default(autoincrement())

  id           Int
  label        String

  server       Server    @relation(fields: [serverId], references: [identifier])
  serverId     Int

  channels     Channel[]
}

model Channel {
  identifier   Int     @id @default(autoincrement())

  id           String // dependent on characters.ts
  label        String
  unread       Boolean
  description  String

  category     Category    @relation(fields: [categoryId], references: [identifier])
  categoryId   Int
  
  messages     Message[]
}

model Message {
  identifier   Int     @id @default(autoincrement())

  id           Int
  user         String // !
  avatarUrl    String
  date         String // !
  text         String

  channel      Channel    @relation(fields: [channelId], references: [identifier])
  channelId    Int
}

